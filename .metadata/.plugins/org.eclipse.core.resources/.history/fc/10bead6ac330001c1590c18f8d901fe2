#version 400 core

in vec3 position;
in vec2 textureCoords;

//out vec3 color;
out vec2 pass_textureCoords;

uniform mat4 transformationMatrix;
uniform mat4 projectionMatrix; // alters projection based on z coordinate

void main(void){
	// 4*4 matrix multiplies by 4*1 matrix producing 4*1 matrix
	gl_Position = projectionMatrix * transformationMatrix *  vec4(position.x,position.y,position.z,1.0);
	//color = vec3(position.x+0.5,1.0,position.y+0.5);
	pass_textureCoords = textureCoords;
}

// output to fragmentShader